#include <iostream>
using namespace std;

bool is_even(int num){
    if (num%2==0){
        return true;
    } else{
        return false;
    }
}
int main(){
    int num = 0;
    cout<<"Please enter the number: ";
    cin>>num;
    if (is_even(num)==1){
        cout<<"The number is even"<<endl;
    } else{
        cout<<"The number is odd"<<endl;
    }
}
