#include <iostream>
using namespace std;

float get_max(int num1,int num2,int num3){
    if (num1>num2&&num1>num3) return num1;
    else if(num2>num1&&num2>num3) return num2;
    else return num3;
}
float get_min(int num1,int num2,int num3){
    if (num1<num2&&num1<num3) return num1;
    else if (num2<num1&&num2<num3) return num2;
    else return num3;
}
int main(){
    int num1 = 0;
    int num2 = 0;
    int num3 = 0;
    cout<<"Please enter the numbers: ";
    cin>>num1>>num2>>num3;
    cout<<"The maximum number is "<<get_max(num1,num2,num3)<<endl;
    cout<<"The minimum number is "<<get_min(num1,num2,num3)<<endl;
}
