#include <iostream>

using namespace std;
int main()
{
    int cost = 10000;
    int sum = 0;
    for (int i=0;i<14;i++){
        cost += cost*0.05;
        if (i>9){
            sum += cost;
        } else{
            cout<<cost<<endl;
        }
    }
    cout<<"The total cost is "<<sum;
    
    return 0;
}
