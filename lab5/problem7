#include <iostream>
#include <string>
using namespace std;

int main()
{
    int op;
    float num1,num2=0;
    cout<<"Please enter the operator(add-1,subtract-2,multiply-3,divide-4, or quit)"<<endl;
    cin>>op;
    switch (op){
        case 1:
            cout<<"Enter the numbers: ";
            cin>>num1>>num2;
            cout<<"The result is "<<num1+num2<<endl;
            break;
        case 2:
            cout<<"Enter the numbers: ";
            cin>>num1>>num2;
            cout<<"The result is "<<num1-num2<<endl;
            break;
        case 3:
            cout<<"Enter the numbers: ";
            cin>>num1>>num2;
            cout<<"The result is "<<num1*num2<<endl;
            break;
        case 4:
            cout<<"Enter the numbers: ";
            cin>>num1>>num2;
            cout<<"The result is "<<num1/num2<<endl;
            break;
        default:
            cout<<"Quit"<<endl;
            return 0;
    }
    
    return main();
}
