#include <iostream>

using namespace std;

int main()
{
    float weight = 0;
    cout<<"Please enter the weight of package: ";
    cin>>weight;
    if (weight<=0){
        cout<<"Invalid input";
        return 0;
    } else if (weight>20){
        cout<<"The package cannot be shipped";
        return 0;
    }
    if (weight<=1){
        cout<<"The shipping cost is 3500";
    } else if (weight<=3){
        cout<<"The shipping cost is 5500";
    } else if (weight<=10){
        cout<<"The shipping cost is 8500";
    } else if (weight<=20){
        cout<<"The shipping cost is 10500";
    }
    
    return 0;
}
